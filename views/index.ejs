<div class="wrapper">
  <!-- ******PROMO****** -->
  <section id="promo" class="promo section">
    <div class="container intro">
      <div class="phone"><i class="fa fa-phone" aria-hidden="true"></i>
        1-800-974-9661</div>
      <h1 class="logo-text">
        <img src="/assets/images/background/logo.png" width="91" class="main-logo" />
        <span class="logo-title">PathAuthority</span>
      </h1>
      <h2 class="main-title">We're changing the world by harnessing the <br/> power of accessible transportation from people like you</h2>
      <p class="main-summary">Enjoy on-demand wheelchair accessible transportation</p>
      <div class="destination-bar">
        <form>
          <div class="field">
            <input type="text" id="starting-point" placeholder="Starting point" />
            <input type="text" id="dest-point" placeholder="Destination" />
            <input type="text" placeholder="Your mobile #" id="phone"/>
            <a  id="go" class="go" data-target="#driver" href="javascript:fireModal()">
              <div id="findMyDriver">Find my driver</div>
              <div class="fa fa-spinner fa-spin" id="spinner"></div>
            </a>
          </div>
        </form>
      </div>
    </div>
    <!--//intro-->

    <div class="bg-slider-wrapper">
      <div id="bg-slider" class="flexslider bg-slider">
        <ul class="slides">
          <li class="slide slide-1"></li>
        </ul>
      </div>
    </div><!--//bg-slider-wrapper-->
  </section><!--//promo-->
  <section class="work">
    <div>
      <h2>How does it work?</h2>
      <ul>
        <li>
          <div class="globe icon-file"></div>
          <p>Select your starting point and destination</p>
        </li>
        <li>
          <div class="budget icon-file"></div>
          <p>Specify a budget and your accessibility requirements</p>
        </li>
        <li>
          <div class="car icon-file"></div>
          <p>Receive bids from our network of background-verified Path Authorities eager to get you where you need to go</p>
        </li>
      </ul>
    </div>
  </section>
</div><!--//wrapper-->


<div class="modal modal-login" id="driver" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header driver-header">
        <p style="text-align: center; font-size: 20px;">We are still finding your driver</p>
      </div>
      <div class="modal-footer">
        <p style="text-align: center; font-size: 25px;">
          Call </i>1-800-974-9661<br />
          Transaction # <span id="order-number"></span>
        </p>
      </div><!--//modal-footer-->
    </div><!--//modal-content-->
  </div><!--//modal-dialog-->
</div><!--//modal-->

</body>

<% include footer %>
